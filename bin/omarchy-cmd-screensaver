#!/bin/bash

if command -v pipes.sh &>/dev/null; then
   # Run pipes.sh in the foreground.
   # The script will wait here until a key is pressed, causing pipes.sh to exit.
   pipes.sh

   # Once pipes.sh exits, the script continues to this line.
   # Now, kill the terminal window.
   pkill -f "ghostty --class=luke.screensaver" 2>/dev/null
else
   gum spin --title "Can't find pipes.sh" -- sleep 2
fi
